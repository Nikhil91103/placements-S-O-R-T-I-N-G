Bubble_sort:
  Repeatedly swap two adjacent elements if they are in wrong order.
  if 'n' elements in an array maximum number of iterations are 'n-1'.
  
  
  //program:1

#include <iostream>
using namespace std;
int main()
{
    int n;
    cout<<"enter the no. of elements:";
    cin>>n;
    int arr[n];
    cout<<"enter the elements for sorting:";
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    
    int counter=1;
    while(counter<n)
    {
        for(int i=0;i<n-counter;i++)
        {
            if(arr[i]>arr[i+1])
            {
              /*  int temp=arr[i];
                arr[i]=arr[i+1];
                arr[i+1]=temp;*/
                
                arr[i]=arr[i]+arr[i+1];
                arr[i+1]=arr[i]-arr[i+1];
                arr[i]=arr[i]-arr[i+1];
                
            }
        }
        counter++;
    }
    cout<<"sorted array is:";
    for(int i=0;i<n;i++)
    {
        cout<<arr[i];
    }
}
